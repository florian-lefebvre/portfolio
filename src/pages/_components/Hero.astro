---
import Section from "~/components/Section.astro";
---

<Section class="pt-24 pb-16">
  <div class="flex space-x-4">
    <div
      class="h-32 w-32 rounded-full bg-bg-subtle border border-border shrink-0"
    >
    </div>
    <div>
      <h1 class="text-2xl mb-2 font-semibold text-text">Florian Lefebvre</h1>
      <p>
        Fullstack developer. Freelancer. Open-Source lover. From France. <span
          id="hero-time"
          class="bg-bg-subtle border border-border px-1 py-0.5 tabular-nums select-none"
        ></span> Central European Time.
      </p>
      <div class="mt-4 flex space-x-2">
        <a
          href="#"
          class="p-2.5 rounded-full bg-bg-subtle border border-border"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="w-6 h-6"
            ><path
              fill="currentColor"
              d="M12 .297c-6.63 0-12 5.373-12 12c0 5.303 3.438 9.8 8.205 11.385c.6.113.82-.258.82-.577c0-.285-.01-1.04-.015-2.04c-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729c1.205.084 1.838 1.236 1.838 1.236c1.07 1.835 2.809 1.305 3.495.998c.108-.776.417-1.305.76-1.605c-2.665-.3-5.466-1.332-5.466-5.93c0-1.31.465-2.38 1.235-3.22c-.135-.303-.54-1.523.105-3.176c0 0 1.005-.322 3.3 1.23c.96-.267 1.98-.399 3-.405c1.02.006 2.04.138 3 .405c2.28-1.552 3.285-1.23 3.285-1.23c.645 1.653.24 2.873.12 3.176c.765.84 1.23 1.91 1.23 3.22c0 4.61-2.805 5.625-5.475 5.92c.42.36.81 1.096.81 2.22c0 1.606-.015 2.896-.015 3.286c0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
            ></path></svg
          >
        </a>
        <a href="#" class="p-3 rounded-full bg-bg-subtle border border-border">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="w-5 h-5"
            ><path
              fill="currentColor"
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037c-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85c3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065a2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </div>
  <script is:inline>
    const updateTime = () => {
      const today = new Date();
      const formatter = new Intl.DateTimeFormat("en-US", {
        timeZone: "CET",
        hour12: false, // 24-hour format
        hour: "numeric",
        minute: "numeric",
        second: "numeric",
      });

      // Format the date using the formatter
      const timeInTimeZone = formatter.format(today);

      document.getElementById("hero-time").innerText = timeInTimeZone;
    };

    updateTime();
    setInterval(() => {
      updateTime();
    }, 1000);
  </script>
</Section>
