---
import { changeLanguage, setDefaultNamespace } from 'i18next'
import About from '~/components/Home/About'
import Hero from '~/components/Home/Hero'
import Featured from '~/components/Projects/Featured.astro'
import Layout from '../layouts/Layout.astro'

changeLanguage('en')

const pageNamespace = 'pages.index'
setDefaultNamespace(pageNamespace)
---

<Layout pageNamespace={pageNamespace}>
    <Hero />
    <div id="content">
        <About client:visible />
        <Featured />
    </div>
</Layout>
