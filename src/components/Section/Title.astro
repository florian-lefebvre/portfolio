---
interface Props {
  id?: string;
  as?: string;
}

const { id, as: As = "h2" } = Astro.props;

const C = id ? "a" : "div";
const href = id ? `/#${id}` : undefined;
---

<As class="text-text font-semibold text-lg">
  <C {href} class="group flex items-center space-x-2">
    <span>
      <slot />
    </span>
    {
      id && (
        <span class="group-hover:opacity-100 opacity-0 transition-opacity">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="w-5 h-5"
          >
            <path
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m9 15l6-6m-4-3l.463-.536a5 5 0 0 1 7.071 7.072L18 13m-5 5l-.397.534a5.068 5.068 0 0 1-7.127 0a4.972 4.972 0 0 1 0-7.071L6 11"
            />
          </svg>
        </span>
      )
    }
  </C>
</As>
