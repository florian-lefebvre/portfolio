---
import { Image } from '@astrojs/image/components'
import { t } from 'i18next'
import Zoom from '~/components/Zoom'

export type Props = Parameters<typeof Image>[0]

const props = Astro.props
---

<figure>
    <Zoom
        client:load
        a11yNameButtonUnzoom={t('zoom.unzoom', { ns: 'common' }) as string}
        a11yNameButtonZoom={t('zoom.zoom', { ns: 'common' }) as string}
    >
        {/* @ts-ignore */}
        <Image
            loading="lazy"
            format="webp"
            {...props}
            width={1200}
            height={627}
            fit="outside"
            quality={100}
        />
    </Zoom>
    <figcaption>{props.alt}</figcaption>
</figure>
