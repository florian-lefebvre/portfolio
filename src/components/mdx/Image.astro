---
import { Image } from '@astrojs/image/components'
import Zoom from 'react-medium-image-zoom'

export type Props = Parameters<typeof Image>[0]

const props = Astro.props
---

<figure>
    <Zoom client:visible>
        {/* @ts-ignore */}
        <Image
            loading="lazy"
            format="webp"
            {...props}
            width={1200}
            height={627}
            fit="outside"
            quality={100}
        />
    </Zoom>
    <figcaption>{props.alt}</figcaption>
</figure>
