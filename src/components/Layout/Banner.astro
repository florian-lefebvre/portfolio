---
export interface Props {
    enabled?: boolean
}

const { enabled = true } = Astro.props
---

{
    enabled ? (
        <a
            href="https://florian-lefebvre.dev"
            target="_blank"
            class="group block border-4 border-transparent bg-primary-5 font-medium text-primary-11 transition-colors hover:bg-primary-6 focus:border-primary-8 focus:outline-none"
        >
            <div class="custom-container px-4 py-2 text-sm">
                Miss the previous version ?{' '}
                <span class="font-semibold group-hover:underline">
                    Check it out!
                </span>
            </div>
        </a>
    ) : (
        <div class="lg:h-10" />
    )
}
